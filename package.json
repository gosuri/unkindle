{
  "name": "unkindle",
  "version": "1.0.0",
  "description": "Kindle book capture utility for macOS",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "NODE_ENV=development npm run build && electron .",
    "make": "electron-forge make"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "electron-squirrel-startup": "^1.0.0",
    "pdf-lib": "^1.17.1",
    "sanitize-filename": "^1.6.3",
    "sharp": "^0.32.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-dmg": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "@types/node": "^18.16.0",
    "electron": "^24.1.2",
    "typescript": "^5.0.4"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "assets/icon.icns"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "format": "ULFO"
          }
        },
        {
          "name": "@electron-forge/maker-zip"
        }
      ]
    }
  }
}
